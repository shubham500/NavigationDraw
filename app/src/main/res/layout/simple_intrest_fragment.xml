<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvresults2"
        android:layout_width="374dp"
        android:layout_height="110dp"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="Simple Interest"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/ednos2"
        android:layout_width="421dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTintMode="add"
        android:hint="Enter the Principal"
        android:inputType="number" />

    <EditText
        android:id="@+id/ednos3"
        android:layout_width="421dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTintMode="add"
        android:hint="Enter the Rate of interest"
        android:inputType="number" />

    <EditText
        android:id="@+id/ednos4"
        android:layout_width="421dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTintMode="add"
        android:hint="Enter the Time period"
        android:inputType="number" />

    <Button
        android:id="@+id/cals2"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTintMode="add"
        android:text="Calculate" />


</LinearLayout>